<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".Menu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:paddingLeft="15dp"
            android:text="Hola!"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppinsregular"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="15dp"
            android:text="Bienvenido"
            android:textSize="50dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/curvilingus"
            android:layout_gravity="left|bottom"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/rounded_scrollview_background"
        android:paddingTop="16dp"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/enfoqueid"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="38dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center"
                    android:layout_marginBottom="30dp"
                    android:text="Enfoque"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/curvilingus"
                    />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left|center"
                    android:src="@drawable/enfoque_icon"
                />

                <TextView
                    android:layout_width="233dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="10dp"
                    android:text="Crea objetivos y tareas que te ayuden
a organizar de mejor manera tu dia a dia"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppinsregular"
                    />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:background="@drawable/circle_layout"
            android:gravity="center"
            >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/next_blanco"
                    />

        </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/rounded_scrollview_background"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        >

        <GridLayout
            android:id="@+id/mainGridid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="15dp"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="38dp"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_layout_white"
                        android:layout_gravity="right|top"
                        android:gravity="center"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_bookmark_24_black"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Tareas"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/curvilingus"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Mira tu pendientes!! y checa tus objetivos"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            />



                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/diarioid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/background2"
                app:cardCornerRadius="38dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_layout_white"
                        android:layout_gravity="right|top"
                        android:gravity="center"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/next"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Diario"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/curvilingus"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="Registra tus pensamientos y estado de animo aquí!!"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        />

                </FrameLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

    </LinearLayout>





</LinearLayout>