<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".TareasyObjetivos"
    android:padding="10dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <Button
            android:id="@+id/bottonbackTyO"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_white"
            android:layout_gravity="left|start"
            android:onClick="Regresar"
            android:clickable="true"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:text="Habitos"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/curvilingus"
        android:layout_gravity="left|bottom"
        />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_scrollview_background"
        android:layout_marginBottom="10dp"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:columnCount="1"
            android:rowCount="1"
            android:padding="15dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Titulo"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:textSize="20dp"
                android:textColor="@color/white"
                />

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:layout_marginBottom="10dp"
                android:hint="Notas"
                android:inputType="text"
                android:textSize="20dp"
                />


        </GridLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/rounded_scrollview_background"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:hint="DescripciÃ³n"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/poppinsregular"
            android:text="Dificultad"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:columnCount="4"
            android:padding="15dp"
            android:rowCount="1">

            <ImageView
                android:src="@drawable/face_frown_icon"
                android:layout_marginRight="20dp"
                />

            <ImageView
                android:src="@drawable/face_grimace_icon"
                android:layout_marginRight="20dp"
                />

            <ImageView
                android:src="@drawable/face_smile_icon"
                android:layout_marginRight="20dp"
                />

            <ImageView
                android:src="@drawable/face_happy_icon"
                />


        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/poppinsregular"
            android:text="Se Repite..."
            android:textColor="@color/white"
            android:textSize="25dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:columnCount="3"
            android:padding="15dp"
            android:rowCount="1">


            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Diario"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="38dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Semanal"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="38dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Mensual"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />

            </androidx.cardview.widget.CardView>

        </GridLayout>



    </LinearLayout>


</LinearLayout>